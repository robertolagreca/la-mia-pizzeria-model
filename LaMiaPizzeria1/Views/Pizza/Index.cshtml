@using LaMiaPizzeriaModel.Models;
@{
    Layout = "_LayoutPersonal";
}

@model List<Pizza>



@if (Model.Count == 0)
{
    <h3>Non ci sono Post da Visualizzare!</h3>
}
else
{


    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="mt-3 mb-3">Lista posts</h1>
                </div>

                <table class="table post-list-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Immagine</th>
                            <th>Titolo</th>
                            <th>Descrizione</th>
                            <th>Prezzo</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Pizza pizza in Model)
                        {
                            <tr>
                                <td>@pizza.Id</td>
                                <!-- questo è un esempio con url immagine esterna alla webapp attuale -->
                                <td class="image"><img class="post-list-image" src="@pizza.Image" width = 200px;></td>
                                <td class="title">@pizza.Name</td>
                                <td class="description">@pizza.Description</td>
                                <td class="price">@pizza.Price</td>

                                <td>
                                    <a class="btn btn-primary btn-danger" href="@Url.Action("Details", "Pizza", new { id = @pizza.Id } )" role="button">Dettagli</a>
                                </td>


                              <!--  <td>
                                    <a class="btn btn-primary" href="@@Url.Action("Details", "Post", new { id = @@pizza.Id } )" role="button">Dettagli</a>
                                        </td>-->
                            </tr>
                        }


                        <!--
                        @@for(int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@@Model[i].Id</td>

                                <td class="image"><img class="post-list-image" src="@@Model[i].Image"></td>
                                <td class="title">@@Model[i].Title</td>
                                <td class="description">@@Model[i].Description</td>
                            </tr>

                        }
                        -->

                    </tbody>
                </table>
            </div>
        </div>
    </div>
}


